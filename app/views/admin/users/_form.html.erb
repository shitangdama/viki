  
<%= form_for([:admin, @user], local: true) do |f| %>
  <div class="card rounded-0">
    <div class="card-body"  style="background:#F6F7F9;" >
      <div class="col-md-8 order-md-1">
        <div class="row">
          <div class="col-md-7 mb-3">
            <label for="exampleInputEmail1">User Name</label>
            <%= f.text_field :username, class: 'form-control', placeholder: "Name", required: true %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-7 mb-3">
            <label for="exampleInputEmail1">Email Address</label>
            <%= f.email_field :email, autofocus: true, placeholder: "Email address", class: "form-control", required: true %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="Password1">Password</label>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <label for="Password2">Password Confirmation</label>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer text-muted d-flex justify-content-between align-items-center" style="background:#FAFBFC;">
      <%= link_to '后退', admin_users_path, class: 'btn btn-sm btn-outline-secondary' %>
      <%= f.submit "提交", class: "btn btn-sm btn-success" %>
    </div>  
  </div>
<% end %>